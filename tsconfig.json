{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": ["ES2020"],
        "rootDir": "src",
        "outDir": "lib",
        "strict": true,
        "importsNotUsedAsValues": "error",
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "sourceMap": true
    },
    "include": ["src/"]
}
